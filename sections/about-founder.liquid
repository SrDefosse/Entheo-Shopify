{% comment %}
  About Founder Section
  Founder image + bio with quote and animated text reveals
{% endcomment %}

<div
  class="about-founder-section section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="about-founder-container page-width">
    {% if section.settings.heading != blank %}
      <div class="about-founder-header" data-gsap-animation="fade-in">
        <h2 class="about-founder-main-heading {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      </div>
    {% endif %}

    <div class="about-founder-content">
      {%- comment -%} Founder Image {%- endcomment -%}
      <div class="about-founder-image-wrapper" data-gsap-animation="scale-up">
        {% if section.settings.founder_image != blank %}
          <div class="about-founder-image-container">
            {{
              section.settings.founder_image
              | image_url: width: 800
              | image_tag: loading: "lazy", class: "about-founder-image", widths: "400, 600, 800", sizes: "(min-width: 750px) 400px, 100vw"
            }}
          </div>
        {% else %}
          <div class="about-founder-placeholder">
            {{ 'avatar' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}

        {% if section.settings.founder_name != blank %}
          <div class="about-founder-name-card glass-card">
            <h3 class="about-founder-name">{{ section.settings.founder_name }}</h3>
            {% if section.settings.founder_title != blank %}
              <p class="about-founder-title">{{ section.settings.founder_title }}</p>
            {% endif %}
          </div>
        {% endif %}
      </div>

      {%- comment -%} Bio Content {%- endcomment -%}
      <div class="about-founder-bio">
        {% if section.settings.quote != blank %}
          <blockquote class="about-founder-quote minimal-card" data-gsap-animation="slide-left">
            <svg class="about-founder-quote-icon" width="40" height="32" viewBox="0 0 40 32" fill="none">
              <path
                d="M0 32V19.2C0 12.8 1.6 7.73333 4.8 4C8 0.266667 12.2667 -1.06581e-06 17.6 0L18.4 6.4C15.4667 6.66667 13.2 7.86667 11.6 10C10.1333 12 9.46667 14.5333 9.6 17.6H18.4V32H0ZM21.6 32V19.2C21.6 12.8 23.2 7.73333 26.4 4C29.6 0.266667 33.8667 -1.06581e-06 39.2 0L40 6.4C37.0667 6.66667 34.8 7.86667 33.2 10C31.7333 12 31.0667 14.5333 31.2 17.6H40V32H21.6Z"
                fill="currentColor"
                opacity="0.2"
              />
            </svg>
            <p class="about-founder-quote-text">{{ section.settings.quote }}</p>
          </blockquote>
        {% endif %}

        {% if section.settings.bio != blank %}
          <div class="about-founder-bio-text rte" data-gsap-animation="fade-in">
            {{ section.settings.bio }}
          </div>
        {% endif %}

        {% if section.settings.signature_image != blank %}
          <div class="about-founder-signature" data-gsap-animation="fade-in">
            {{
              section.settings.signature_image
              | image_url: width: 300
              | image_tag: class: "about-founder-signature-image", alt: "Signature", loading: "lazy"
            }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .about-founder-section {
    position: relative;
  }

  .about-founder-container {
    width: 100%;
  }

  .about-founder-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .about-founder-main-heading {
    margin: 0;
  }

  .about-founder-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }

  @media screen and (min-width: 750px) {
    .about-founder-content {
      grid-template-columns: 400px 1fr;
      gap: 5rem;
    }
  }

  .about-founder-image-wrapper {
    position: relative;
    width: 100%;
  }

  .about-founder-image-container {
    position: relative;
    width: 100%;
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .about-founder-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .about-founder-placeholder {
    width: 100%;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--color-foreground-rgb), 0.05);
    border-radius: 16px;
    margin-bottom: 2rem;
  }

  .about-founder-name-card {
    padding: 1.5rem;
    text-align: center;
  }

  .about-founder-name {
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
    font-weight: 600;
  }

  .about-founder-title {
    font-size: 0.95rem;
    color: rgba(var(--color-foreground-rgb), 0.7);
    margin: 0;
  }

  .about-founder-bio {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .about-founder-quote {
    position: relative;
    padding: 2.5rem;
    margin: 0;
  }

  .about-founder-quote-icon {
    position: absolute;
    top: 1.5rem;
    left: 1.5rem;
    color: var(--color-foreground);
  }

  .about-founder-quote-text {
    font-size: 1.3rem;
    line-height: 1.6;
    font-style: italic;
    margin: 0;
    padding-top: 2rem;
    color: var(--color-foreground);
  }

  .about-founder-bio-text {
    font-size: 1.05rem;
    line-height: 1.8;
    color: rgba(var(--color-foreground-rgb), 0.8);
  }

  .about-founder-bio-text p:first-child {
    margin-top: 0;
  }

  .about-founder-bio-text p:last-child {
    margin-bottom: 0;
  }

  .about-founder-signature {
    display: flex;
    justify-content: flex-start;
  }

  .about-founder-signature-image {
    max-width: 200px;
    height: auto;
    filter: grayscale(1) contrast(1.2);
    opacity: 0.8;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "About - Founder",
  "tag": "section",
  "class": "about-founder-wrapper section-wrapper",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Meet the Founder"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h3", "label": "Small" },
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" }
      ],
      "default": "h2"
    },
    {
      "type": "header",
      "content": "Founder Information"
    },
    {
      "type": "image_picker",
      "id": "founder_image",
      "label": "Founder image"
    },
    {
      "type": "text",
      "id": "founder_name",
      "label": "Founder name",
      "default": "Jane Doe"
    },
    {
      "type": "text",
      "id": "founder_title",
      "label": "Founder title",
      "default": "Founder & Creative Director"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "textarea",
      "id": "quote",
      "label": "Quote",
      "default": "Design is not just what it looks like and feels like. Design is how it works."
    },
    {
      "type": "richtext",
      "id": "bio",
      "label": "Biography",
      "default": "<p>With over a decade of experience in design, I've dedicated my career to creating pieces that tell a story. Every collection is born from a passion for craftsmanship and a deep respect for traditional techniques merged with modern sensibilities.</p>"
    },
    {
      "type": "image_picker",
      "id": "signature_image",
      "label": "Signature image (optional)"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        { "value": "page-width", "label": "Page width" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "About - Founder"
    }
  ]
}
{% endschema %}

