{% comment %}
  About Philosophy Section
  Image + text layout with GSAP animations and backdrop blur
{% endcomment %}

{% liquid
%}

<div
  class="about-philosophy-section section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="about-philosophy-container page-width">
    {%- comment -%} First Row: Image Left, Text Right {%- endcomment -%}
    <div class="about-philosophy-row about-philosophy-row--first">
      <div class="about-philosophy-image-wrapper">
        {% if section.settings.image != blank %}
          <div class="about-philosophy-image-container">
            {{
              section.settings.image
              | image_url: width: 800
              | image_tag: loading: "lazy", class: "about-philosophy-image", widths: "400, 600, 800", sizes: "(min-width: 750px) 50vw, 100vw"
            }}
          </div>
        {% else %}
          <div class="about-philosophy-placeholder">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

      <div class="about-philosophy-content {% if section.settings.enable_backdrop_blur %}glass-card-light{% endif %}">
        <div class="about-philosophy-content-inner">
          {% if section.settings.text != blank %}
            <div class="about-philosophy-text rte">
              {{ section.settings.text }}
            </div>
          {% endif %}

          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <a
              href="{{ section.settings.button_link }}"
              class="about-philosophy-button {% if section.settings.enable_backdrop_blur %}glass-button{% else %}button button--secondary{% endif %}"
            >
              {{ section.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    {%- comment -%} Second Row: Text Left, Image Right {%- endcomment -%}
    <div class="about-philosophy-row about-philosophy-row--second">
      <div class="about-philosophy-content {% if section.settings.enable_backdrop_blur %}glass-card-light{% endif %}">
        <div class="about-philosophy-content-inner">
          {% if section.settings.second_text != blank %}
            <div class="about-philosophy-text rte">
              {{ section.settings.second_text }}
            </div>
          {% endif %}

          {% if section.settings.second_button_label != blank and section.settings.second_button_link != blank %}
            <a
              href="{{ section.settings.second_button_link }}"
              class="about-philosophy-button {% if section.settings.enable_backdrop_blur %}glass-button{% else %}button button--secondary{% endif %}"
            >
              {{ section.settings.second_button_label }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="about-philosophy-image-wrapper">
        {% if section.settings.second_image != blank %}
          <div class="about-philosophy-image-container">
            {{
              section.settings.second_image
              | image_url: width: 800
              | image_tag: loading: "lazy", class: "about-philosophy-image", widths: "400, 600, 800", sizes: "(min-width: 750px) 50vw, 100vw"
            }}
          </div>
        {% else %}
          <div class="about-philosophy-placeholder">
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>
    </div>

    {%- comment -%} Third Section: Shadow Container with Text {%- endcomment -%}
    <div class="about-philosophy-shadow-section">
      <div class="about-philosophy-shadow-content glass-card">
        {% if section.settings.shadow_heading != blank %}
          <h2 class="about-philosophy-shadow-heading {{ section.settings.shadow_heading_size | default: 'h2' }}">
            {{ section.settings.shadow_heading }}
          </h2>
        {% endif %}

        {% if section.settings.shadow_button_label != blank and section.settings.shadow_button_link != blank %}
          <a
            href="{{ section.settings.shadow_button_link }}"
            class="about-philosophy-shadow-button glass-button"
          >
            {{ section.settings.shadow_button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .about-philosophy-section {
    position: relative;
  }

  .about-philosophy-container {
    width: 100%;
  }

  .about-philosophy-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
    margin-bottom: 4rem;
  }

  @media screen and (min-width: 750px) {
    .about-philosophy-row {
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem;
    }
  }

  .about-philosophy-row--second {
    direction: rtl;
  }

  .about-philosophy-row--second > * {
    direction: ltr;
  }

  .about-philosophy-image-wrapper {
    position: relative;
    width: 100%;
  }

  .about-philosophy-image-container {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: 16px;
  }

  .parallax-container {
    height: 600px;
  }

  @media screen and (max-width: 749px) {
    .parallax-container {
      height: 400px;
    }
  }

  .about-philosophy-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .about-philosophy-placeholder {
    width: 100%;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--color-foreground-rgb), 0.05);
    border-radius: 16px;
  }

  .about-philosophy-shadow-section {
    margin-top: 4rem;
    text-align: center;
  }

  .about-philosophy-shadow-content {
    display: inline-block;
    padding: 3rem 4rem;
    max-width: 800px;
    text-align: center;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.15);
  }


  .about-philosophy-shadow-heading {
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
    color: var(--color-foreground);
    text-align: center;
  }

  .about-philosophy-shadow-button {
    display: inline-block;
    margin-top: 1rem;
  }

  .about-philosophy-content {
    padding: 2rem;
    border-radius: 16px;
  }

  @media screen and (min-width: 750px) {
    .about-philosophy-content {
      padding: 3rem;
    }
  }

  .about-philosophy-content-inner > * + * {
    margin-top: 1.5rem;
  }


  .about-philosophy-text {
    font-size: 1.1rem;
    line-height: 1.7;
    color: rgba(var(--color-foreground-rgb), 0.8);
  }

  .about-philosophy-button {
    display: inline-block;
    text-decoration: none;
    margin-top: 2rem;
  }
{% endstylesheet %}

