{% comment %}
  About Philosophy Section
  Image + text layout with GSAP animations and backdrop blur
{% endcomment %}

{% liquid
  assign layout_orientation = section.settings.layout_orientation
%}

<div
  class="about-philosophy-section section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="about-philosophy-container page-width">
    <div class="about-philosophy-grid about-philosophy-grid--{{ layout_orientation }}">
      {%- comment -%} First Column {%- endcomment -%}
      {% if layout_orientation == 'image-left' %}
        <div class="about-philosophy-image-wrapper">
          {% if section.settings.image != blank %}
            <div class="about-philosophy-image-container">
              {{
                section.settings.image
                | image_url: width: 800
                | image_tag: loading: "lazy", class: "about-philosophy-image", widths: "400, 600, 800", sizes: "(min-width: 750px) 50vw, 100vw"
              }}
            </div>
          {% else %}
            <div class="about-philosophy-placeholder">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
        </div>
      {% else %}
        <div class="about-philosophy-content">
          <div class="about-philosophy-content-inner">
            {% if section.settings.text != blank %}
              <div class="about-philosophy-text rte">
                {{ section.settings.text }}
              </div>
            {% endif %}

            {% if section.settings.button_label != blank and section.settings.button_link != blank %}
              <a
                href="{{ section.settings.button_link }}"
                class="about-philosophy-button button button--secondary"
              >
                {{ section.settings.button_label }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}

      {%- comment -%} Second Column {%- endcomment -%}
      {% if layout_orientation == 'image-left' %}
        <div class="about-philosophy-content">
          <div class="about-philosophy-content-inner">
            {% if section.settings.text != blank %}
              <div class="about-philosophy-text rte">
                {{ section.settings.text }}
              </div>
            {% endif %}

            {% if section.settings.button_label != blank and section.settings.button_link != blank %}
              <a
                href="{{ section.settings.button_link }}"
                class="about-philosophy-button button button--secondary"
              >
                {{ section.settings.button_label }}
              </a>
            {% endif %}
          </div>
        </div>
      {% else %}
        <div class="about-philosophy-image-wrapper">
          {% if section.settings.image != blank %}
            <div class="about-philosophy-image-container">
              {{
                section.settings.image
                | image_url: width: 800
                | image_tag: loading: "lazy", class: "about-philosophy-image", widths: "400, 600, 800", sizes: "(min-width: 750px) 50vw, 100vw"
              }}
            </div>
          {% else %}
            <div class="about-philosophy-placeholder">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
  .about-philosophy-section {
    position: relative;
    background: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
  }

  .about-philosophy-container {
    width: 100%;
  }

  .about-philosophy-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .about-philosophy-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem;
    }
  }

  .about-philosophy-image-wrapper {
    position: relative;
    width: 100%;
  }

  .about-philosophy-image-container {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: 16px;
    background: rgba(var(--color-background-rgb), 0.02);
  }

  .about-philosophy-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .about-philosophy-placeholder {
    width: 100%;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--color-background-rgb), 0.05);
    border-radius: 16px;
  }

  .about-philosophy-content {
    padding: 2rem;
    border-radius: 16px;
    background: rgba(var(--color-background-rgb), 0.8);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  @media screen and (min-width: 750px) {
    .about-philosophy-content {
      padding: 3rem;
    }
  }

  .about-philosophy-content-inner > * + * {
    margin-top: 1.5rem;
  }

  .about-philosophy-text {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--color-foreground);
  }

  .about-philosophy-button {
    display: inline-block;
    text-decoration: none;
    margin-top: 2rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "About - Philosophy",
  "tag": "section",
  "class": "about-philosophy-wrapper section-wrapper",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>We believe in creating timeless pieces that transcend trends. Each design is carefully crafted to embody our commitment to quality, sustainability, and mindful living.</p>"
    },
    {
      "type": "select",
      "id": "layout_orientation",
      "label": "Layout orientation",
      "options": [
        { "value": "image-left", "label": "Image - Text" },
        { "value": "text-left", "label": "Text - Image" }
      ],
      "default": "image-left"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        { "value": "page-width", "label": "Page width" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "About - Philosophy"
    }
  ]
}
{% endschema %}

