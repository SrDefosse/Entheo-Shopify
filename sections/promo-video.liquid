{% comment %}
  Promotional Video Section
  Full-width video background with overlay content and backdrop blur
{% endcomment %}

{% liquid
  assign video_type = section.settings.video_type
  assign enable_backdrop_blur = section.settings.enable_backdrop_blur
%}

<div
  class="promo-video-section section section--full-width color-{{ section.settings.color_scheme }}"
  style="
    --promo-video-height: {{ section.settings.section_height }};
    --promo-video-height-mobile: {{ section.settings.section_height_mobile }};
    {% render 'spacing-style', settings: section.settings %}
  "
  data-gsap-animation="fade-in"
>
  <div class="promo-video-container">
    {%- comment -%} Video Background {%- endcomment -%}
    <div class="promo-video-background">
      {% if video_type == 'shopify' and section.settings.video != blank %}
        {{
          section.settings.video
          | video_tag:
            autoplay: section.settings.autoplay,
            loop: section.settings.loop,
            controls: section.settings.controls,
            muted: section.settings.muted,
            class: 'promo-video-element',
            playsinline: true
        }}
      {% elsif video_type == 'youtube' and section.settings.youtube_id != blank %}
        <div class="promo-video-embed">
          <iframe
            src="https://www.youtube.com/embed/{{ section.settings.youtube_id }}?autoplay={{ section.settings.autoplay }}&loop={{ section.settings.loop }}&controls={{ section.settings.controls }}&mute={{ section.settings.muted }}&playlist={{ section.settings.youtube_id }}"
            frameborder="0"
            allow="autoplay; encrypted-media"
            allowfullscreen
            class="promo-video-iframe"
          ></iframe>
        </div>
      {% elsif video_type == 'vimeo' and section.settings.vimeo_id != blank %}
        <div class="promo-video-embed">
          <iframe
            src="https://player.vimeo.com/video/{{ section.settings.vimeo_id }}?autoplay={{ section.settings.autoplay }}&loop={{ section.settings.loop }}&controls={{ section.settings.controls }}&muted={{ section.settings.muted }}"
            frameborder="0"
            allow="autoplay; fullscreen"
            allowfullscreen
            class="promo-video-iframe"
          ></iframe>
        </div>
      {% elsif section.settings.fallback_image != blank %}
        {{
          section.settings.fallback_image
          | image_url: width: 1920
          | image_tag: loading: "eager", class: "promo-video-fallback", sizes: "100vw"
        }}
      {% else %}
        <div class="promo-video-placeholder">
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}

      {%- comment -%} Overlay {%- endcomment -%}
      {% if section.settings.enable_overlay %}
        <div
          class="promo-video-overlay"
          style="background: {{ section.settings.overlay_color }};"
        ></div>
      {% endif %}
    </div>

    {%- comment -%} Content {%- endcomment -%}
    <div class="promo-video-content {{ section.settings.content_alignment }}">
      <div
        class="promo-video-content-inner {% if enable_backdrop_blur %}backdrop-content{% endif %}"
        data-gsap-animation="scale-up"
      >
        {% for block in section.blocks %}
          <div class="promo-video-block" {{ block.shopify_attributes }}>
            {% case block.type %}
              {% when 'heading' %}
                <h2 class="promo-video-heading {{ block.settings.heading_size }}">
                  {{ block.settings.text }}
                </h2>

              {% when 'text' %}
                <div class="promo-video-text rte">
                  {{ block.settings.text }}
                </div>

              {% when 'button' %}
                {% if block.settings.link != blank %}
                  <a
                    href="{{ block.settings.link }}"
                    class="promo-video-button {% if enable_backdrop_blur %}glass-button{% else %}button button--primary{% endif %}"
                  >
                    {{ block.settings.label }}
                  </a>
                {% endif %}

              {% when 'spacer' %}
                <div
                  class="promo-video-spacer"
                  style="height: {{ block.settings.height }}px;"
                ></div>
            {% endcase %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .promo-video-section {
    position: relative;
    overflow: hidden;
  }

  .promo-video-container {
    position: relative;
    width: 100%;
    height: var(--promo-video-height-mobile);
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media screen and (min-width: 750px) {
    .promo-video-container {
      height: var(--promo-video-height);
    }
  }

  .promo-video-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .promo-video-element,
  .promo-video-fallback {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .promo-video-embed {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .promo-video-iframe {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100vw;
    height: 100vh;
    transform: translate(-50%, -50%);
    pointer-events: none;
  }

  @media screen and (min-width: 750px) {
    .promo-video-iframe {
      width: 177.77777778vh;
      height: 56.25vw;
      min-height: 100vh;
      min-width: 100vw;
    }
  }

  .promo-video-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--color-foreground-rgb), 0.05);
  }

  .promo-video-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .promo-video-content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: 2rem;
    text-align: center;
  }

  .promo-video-content.align-left {
    text-align: left;
  }

  .promo-video-content.align-right {
    text-align: right;
  }

  .promo-video-content-inner {
    max-width: 700px;
    margin: 0 auto;
    padding: 2rem;
  }

  @media screen and (min-width: 750px) {
    .promo-video-content {
      padding: 4rem;
    }

    .promo-video-content-inner {
      padding: 3rem;
    }
  }

  .promo-video-heading {
    margin-bottom: 1.5rem;
    color: var(--color-foreground);
    line-height: 1.2;
  }

  .promo-video-text {
    margin-bottom: 2rem;
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--color-foreground);
  }

  .promo-video-button {
    display: inline-block;
    text-decoration: none;
    font-weight: 500;
  }

  .promo-video-block + .promo-video-block {
    margin-top: 1rem;
  }
{% endstylesheet %}

