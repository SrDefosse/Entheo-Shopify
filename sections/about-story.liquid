{% comment %}
  About Story Section
  Timeline/narrative layout with multiple text + image blocks
{% endcomment %}

<div
  class="about-story-section section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} spacing-style"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="about-story-container page-width">
    {% if section.settings.heading != blank %}
      <div class="about-story-header" data-gsap-animation="fade-in">
        <h2 class="about-story-heading {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
        {% if section.settings.description != blank %}
          <div class="about-story-description rte">
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="about-story-timeline">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'story_item' %}
            {% assign index = forloop.index %}
            {% assign is_even = index | modulo: 2 %}
            
            <div
              class="about-story-item {% if is_even == 0 %}about-story-item--reverse{% endif %}"
              {{ block.shopify_attributes }}
              data-gsap-animation="fade-in"
            >
              {%- comment -%} Timeline Dot {%- endcomment -%}
              {% if section.settings.show_timeline %}
                <div class="about-story-timeline-dot"></div>
              {% endif %}

              {%- comment -%} Image {%- endcomment -%}
              <div class="about-story-image-wrapper">
                {% if block.settings.image != blank %}
                  <div class="about-story-image-container minimal-card">
                    {{
                      block.settings.image
                      | image_url: width: 800
                      | image_tag: loading: "lazy", class: "about-story-image", widths: "400, 600, 800", sizes: "(min-width: 750px) 400px, 100vw"
                    }}
                  </div>
                {% else %}
                  <div class="about-story-placeholder minimal-card">
                    {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
              </div>

              {%- comment -%} Content {%- endcomment -%}
              <div class="about-story-content">
                <div class="about-story-content-inner glass-card-light">
                  {% if block.settings.year != blank %}
                    <span class="about-story-year">{{ block.settings.year }}</span>
                  {% endif %}

                  {% if block.settings.title != blank %}
                    <h3 class="about-story-title">{{ block.settings.title }}</h3>
                  {% endif %}

                  {% if block.settings.text != blank %}
                    <div class="about-story-text rte">
                      {{ block.settings.text }}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>

          {% when 'milestone' %}
            <div class="about-story-milestone" {{ block.shopify_attributes }} data-gsap-animation="scale-up">
              <div class="about-story-milestone-content glass-card">
                {% if block.settings.icon != blank %}
                  <div class="about-story-milestone-icon">
                    {{ block.settings.icon }}
                  </div>
                {% endif %}
                {% if block.settings.number != blank %}
                  <div class="about-story-milestone-number">{{ block.settings.number }}</div>
                {% endif %}
                {% if block.settings.label != blank %}
                  <div class="about-story-milestone-label">{{ block.settings.label }}</div>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
  .about-story-section {
    position: relative;
  }

  .about-story-container {
    width: 100%;
  }

  .about-story-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 4rem;
  }

  .about-story-heading {
    margin-bottom: 1rem;
  }

  .about-story-description {
    font-size: 1.1rem;
    color: rgba(var(--color-foreground-rgb), 0.7);
  }

  .about-story-timeline {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .about-story-timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: rgba(var(--color-foreground-rgb), 0.1);
    transform: translateX(-50%);
  }

  @media screen and (max-width: 749px) {
    .about-story-timeline::before {
      left: 20px;
    }
  }

  .about-story-item {
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .about-story-item {
      grid-template-columns: 1fr 40px 1fr;
      gap: 3rem;
    }

    .about-story-item--reverse .about-story-image-wrapper {
      grid-column: 3;
      grid-row: 1;
    }

    .about-story-item--reverse .about-story-timeline-dot {
      grid-column: 2;
      grid-row: 1;
    }

    .about-story-item--reverse .about-story-content {
      grid-column: 1;
      grid-row: 1;
    }
  }

  .about-story-timeline-dot {
    position: relative;
    width: 20px;
    height: 20px;
    background: var(--color-background);
    border: 3px solid var(--color-foreground);
    border-radius: 50%;
    margin: 0 auto;
    z-index: 1;
  }

  @media screen and (max-width: 749px) {
    .about-story-timeline-dot {
      position: absolute;
      left: 10px;
      top: 50%;
      transform: translateY(-50%);
    }
  }

  .about-story-image-wrapper {
    width: 100%;
  }

  .about-story-image-container,
  .about-story-placeholder {
    border-radius: 12px;
    overflow: hidden;
  }

  .about-story-placeholder {
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--color-foreground-rgb), 0.05);
  }

  .about-story-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .about-story-content-inner {
    padding: 2rem;
    border-radius: 12px;
  }

  .about-story-year {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-foreground);
    opacity: 0.6;
    margin-bottom: 0.5rem;
  }

  .about-story-title {
    font-size: 1.5rem;
    margin: 0 0 1rem 0;
    line-height: 1.3;
  }

  .about-story-text {
    font-size: 1rem;
    line-height: 1.7;
    color: rgba(var(--color-foreground-rgb), 0.8);
  }

  .about-story-text p:first-child {
    margin-top: 0;
  }

  .about-story-text p:last-child {
    margin-bottom: 0;
  }

  .about-story-milestone {
    position: relative;
    display: flex;
    justify-content: center;
    margin: 2rem 0;
  }

  .about-story-milestone-content {
    padding: 2rem 3rem;
    text-align: center;
    min-width: 200px;
  }

  .about-story-milestone-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .about-story-milestone-number {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 0.5rem;
    color: var(--color-foreground);
  }

  .about-story-milestone-label {
    font-size: 0.95rem;
    color: rgba(var(--color-foreground-rgb), 0.7);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
{% endstylesheet %}

