      "options": [
        {
          "value": "center",
          "label": "Centro"
        },
        {
          "value": "top",
          "label": "Arriba"
        },
        {
          "value": "bottom",
          "label": "Abajo"
        },
        {
          "value": "left",
          "label": "Izquierda"
        },
        {
          "value": "right",
          "label": "Derecha"
        },
        {
          "value": "top-left",
          "label": "Arriba izquierda"
        },
        {
          "value": "top-right",
          "label": "Arriba derecha"
        },
