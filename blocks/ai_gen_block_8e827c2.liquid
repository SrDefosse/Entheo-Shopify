{% doc %}
  @prompt
    Large bold text filled with an image. Include a setting to control the background color and section width., it must be centered
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: 60px 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 400px;
  }

  .ai-image-text-container-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.section_width }}px;
    text-align: center;
  }

  .ai-image-text-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: 700;
    line-height: 1.1;
    margin: 0;
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    {% if block.settings.fill_image %}
      background-image: url('{{ block.settings.fill_image | image_url: width: 2000 }}');
    {% else %}
      background-color: {{ block.settings.fallback_text_color }};
      color: {{ block.settings.fallback_text_color }};
      -webkit-background-clip: initial;
      background-clip: initial;
    {% endif %}
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    border: 2px dashed #cccccc;
    border-radius: 8px;
    padding: 40px 20px;
    text-align: center;
    position: relative;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 200px;
    max-width: 300px;
    opacity: 0.3;
  }

  .ai-image-text-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 8px 16px;
    border-radius: 4px;
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.7 }}px;
    }

    .ai-image-text-{{ ai_gen_id }} {
      padding: 40px 20px;
      min-height: 300px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-image-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.5 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-image-text-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-image-text-container-{{ ai_gen_id }}">
    {% if block.settings.text != blank %}
      <h1 class="ai-image-text-heading-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </h1>
    {% else %}
      <div class="ai-image-text-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-image-text-empty-state-{{ ai_gen_id }}">
          Add your text and fill image
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Image filled text",
  "settings": [
    {
      "type": "header",
      "content": "Text content"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "BOLD TEXT"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 40,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Text size",
      "default": 120
    },
    {
      "type": "header",
      "content": "Image fill"
    },
    {
      "type": "image_picker",
      "id": "fill_image",
      "label": "Fill image"
    },
    {
      "type": "color",
      "id": "fallback_text_color",
      "label": "Fallback text color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_width",
      "min": 600,
      "max": 1400,
      "step": 50,
      "unit": "px",
      "label": "Section width",
      "default": 1200
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Image filled text"
    }
  ]
}
{% endschema %}