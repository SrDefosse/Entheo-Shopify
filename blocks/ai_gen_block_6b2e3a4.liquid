{% doc %}
  @prompt
    <div>
    Title with subtitle
    </div>
    <div>
    a set of a customizable amount of wide cards with an ID number to the left, title, subtitle, and description.
    </div>
    
    <style>
    each card should have shadows
    </style>, <style>
    Numbers must have a transparent background
    </style>
    
    <style>
    Text must be configurable to have bold, italic, or underline
    </style>
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-title-subtitle-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-title-subtitle-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-title-subtitle-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-title-subtitle-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    font-weight: 700;
  }

  .ai-title-subtitle-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-title-subtitle-cards-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ block.settings.card_gap }}px;
  }

  .ai-title-subtitle-card-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_inner_gap }}px;
    padding: {{ block.settings.card_padding }}px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    box-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_spread }}px {{ block.settings.shadow_color }};
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .ai-title-subtitle-card-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y | plus: 2 }}px {{ block.settings.shadow_blur | plus: 4 }}px {{ block.settings.shadow_spread }}px {{ block.settings.shadow_color }};
  }

  .ai-title-subtitle-card-number-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.number_size }}px;
    height: {{ block.settings.number_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    color: {{ block.settings.number_color }};
    border-radius: {{ block.settings.number_border_radius }}px;
    font-size: {{ block.settings.number_font_size }}px;
    font-weight: 700;
  }

  .ai-title-subtitle-card-content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-title-subtitle-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 {{ block.settings.card_title_spacing }}px 0;
    {% if block.settings.card_title_bold %}font-weight: 700;{% else %}font-weight: 600;{% endif %}
    {% if block.settings.card_title_italic %}font-style: italic;{% endif %}
    {% if block.settings.card_title_underline %}text-decoration: underline;{% endif %}
  }

  .ai-title-subtitle-card-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_subtitle_size }}px;
    color: {{ block.settings.card_subtitle_color }};
    margin: 0 0 {{ block.settings.card_subtitle_spacing }}px 0;
    {% if block.settings.card_subtitle_bold %}font-weight: 700;{% else %}font-weight: 500;{% endif %}
    {% if block.settings.card_subtitle_italic %}font-style: italic;{% endif %}
    {% if block.settings.card_subtitle_underline %}text-decoration: underline;{% endif %}
  }

  .ai-title-subtitle-card-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_description_size }}px;
    color: {{ block.settings.card_description_color }};
    margin: 0;
    line-height: 1.6;
    {% if block.settings.card_description_bold %}font-weight: 700;{% endif %}
    {% if block.settings.card_description_italic %}font-style: italic;{% endif %}
    {% if block.settings.card_description_underline %}text-decoration: underline;{% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-title-subtitle-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-title-subtitle-card-number-{{ ai_gen_id }} {
      width: {{ block.settings.number_size | times: 0.8 }}px;
      height: {{ block.settings.number_size | times: 0.8 }}px;
      font-size: {{ block.settings.number_font_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-title-subtitle-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-title-subtitle-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-title-subtitle-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-title-subtitle-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-title-subtitle-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-title-subtitle-cards-{{ ai_gen_id }}">
      {% for i in (1..block.settings.number_of_cards) %}
        {% liquid
          assign card_title_key = 'card_' | append: i | append: '_title'
          assign card_subtitle_key = 'card_' | append: i | append: '_subtitle'
          assign card_description_key = 'card_' | append: i | append: '_description'
          
          assign card_title = block.settings[card_title_key]
          assign card_subtitle = block.settings[card_subtitle_key]
          assign card_description = block.settings[card_description_key]
        %}

        <div class="ai-title-subtitle-card-{{ ai_gen_id }}">
          <div class="ai-title-subtitle-card-number-{{ ai_gen_id }}">
            {{ i }}
          </div>
          <div class="ai-title-subtitle-card-content-{{ ai_gen_id }}">
            {% if card_title != blank %}
              <h3 class="ai-title-subtitle-card-title-{{ ai_gen_id }}">{{ card_title }}</h3>
            {% endif %}
            {% if card_subtitle != blank %}
              <p class="ai-title-subtitle-card-subtitle-{{ ai_gen_id }}">{{ card_subtitle }}</p>
            {% endif %}
            {% if card_description != blank %}
              <p class="ai-title-subtitle-card-description-{{ ai_gen_id }}">{{ card_description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

