{% doc %}
  @prompt
    a centered horizontal image with the artists picture and a description below, image should be cover, not contain, and it should have a shadow as well.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-artist-profile-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    /* Hereda el fondo del contenedor/section padre */
    background: inherit;
    background-color: inherit;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  /* Asegura que el área de la imagen también herede el fondo */
  .ai-artist-profile__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_width }}px;
    margin-bottom: {{ block.settings.spacing }}px;
    background-color: inherit;
  }

  .ai-artist-profile__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    object-fit: cover;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};
  }

  /* Quita el gris y hereda el fondo del padre también en el placeholder */
  .ai-artist-profile__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    background: inherit;
    background-color: inherit;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};
    position: relative;
  }

  .ai-artist-profile__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-artist-profile__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  /* El contenedor del texto hereda el fondo del padre */
  .ai-artist-profile__description-{{ ai_gen_id }} {
    width: 100%
    ;
    max-width: {{ block.settings.description_width }}px;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    background-color: inherit;
  }

  .ai-artist-profile__description-{{ ai_gen_id }} p {
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-artist-profile-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-artist-profile__image-wrapper-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.spacing | times: 0.7 }}px;
    }
  }
{% endstyle %}


<div class="ai-artist-profile-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-artist-profile__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.artist_image %}
      <img
        src="{{ block.settings.artist_image | image_url: width: 1200 }}"
        alt="{{ block.settings.artist_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.artist_image.width }}"
        height="{{ block.settings.artist_image.height }}"
        class="ai-artist-profile__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-artist-profile__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-artist-profile__empty-state-{{ ai_gen_id }}">
          Add an artist image
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.description != blank %}
    <div class="ai-artist-profile__description-{{ ai_gen_id }}">
      {{ block.settings.description }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Artist profile",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "artist_image",
      "label": "Artist image"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 200,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Image width",
      "default": 600
    },
    {
      "type": "select",
      "id": "image_aspect_ratio",
      "label": "Image aspect ratio",
      "options": [
        {
          "value": "1/1",
          "label": "Square (1:1)"
        },
        {
          "value": "4/3",
          "label": "Landscape (4:3)"
        },
        {
          "value": "3/4",
          "label": "Portrait (3:4)"
        },
        {
          "value": "16/9",
          "label": "Wide (16:9)"
        }
      ],
      "default": "1/1"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Image border radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Shadow"
    },
    {
      "type": "range",
      "id": "shadow_horizontal",
      "min": -20,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Horizontal offset",
      "default": 0
    },
    {
      "type": "range",
      "id": "shadow_vertical",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Vertical offset",
      "default": 8
    },
    {
      "type": "range",
      "id": "shadow_blur",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Blur",
      "default": 20
    },
    {
      "type": "color",
      "id": "shadow_color",
      "label": "Shadow color",
      "default": "#00000026"
    },
    {
      "type": "header",
      "content": "Description"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Add a description about the artist here. Share their story, inspiration, and creative journey.</p>"
    },
    {
      "type": "range",
      "id": "description_width",
      "min": 300,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Description width",
      "default": 600
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1400,
      "step": 100,
      "unit": "px",
      "label": "Maximum width",
      "default": 800
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 10,
      "max": 80,
      "step": 5,
      "unit": "px",
      "label": "Space between image and text",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 20
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Artist profile"
    }
  ]
}
{% endschema %}
